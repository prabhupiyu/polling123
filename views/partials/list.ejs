    </div>

    <div class="row" ng-switch on="polls.length" id="pollList">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="scrollbox3">
            <ul ng-switch-when="0">
                <li><em>No polls in databases. Would you like to  <a href="#/new">create one</a>?</li>
	     </ul>
        	<div >

            <ul  class="list-group" ng-switch-default>
                <li  class="list-group-item" ng-repeat="poll in polls | filter:query |orderBy:poll._id" >
           
                    <div class="row">
                    
                    <div class="col-md-2">
                        <div class="review-person">
                            <img src="/images/poll.png" alt="" class="img-responsive">
                        </div>
                    </div>
                    <div class=" col-md-7 ">
                        <h3> <a  href="#/poll/{{poll._id}}">{{poll.question}}</a> </h3> 
                       
                    </div>
                          <div class=" col-md-3 ">                          
                              <div  class="row">  <a  href="#/view/{{poll._id}}">  <button class="btn btn-success pull-right" type="button" ><span class="glyphicon glyphicon-th-list"></span> View</button></a></div>
                        <div class="row"> <a  href="#/vote/{{poll._id}}"> <button class="btn btn-success pull-right" type="button" ><span class="glyphicon glyphicon-stats"></span>Vote</button></a></div>                             
                        </div>
                    </div>
                
                  
                </li>
            </ul>
        </div>
        </div>
    </div>
